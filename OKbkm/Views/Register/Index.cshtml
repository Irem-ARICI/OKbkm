@model OKbkm.Models.Register
@{
    ViewData["Title"] = "Yeni Kullanıcı Kaydı";
}

<div class="register-container">
    <h2>✨ Yeni Kullanıcı Kaydı</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert-success-box">
            @TempData["Success"]
        </div>
    }

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <form asp-action="Index" method="post" class="register-form">
        <input asp-for="TC" placeholder="T.C. Kimlik No" class="form-control" />
        <span asp-validation-for="TC" class="text-danger"></span>

        <input asp-for="NameUsername" placeholder="Ad Soyad" class="form-control" />
        <span asp-validation-for="NameUsername" class="text-danger"></span>

        <input asp-for="Mail" placeholder="E-Posta" class="form-control" />
        <span asp-validation-for="Mail" class="text-danger"></span>

        <input asp-for="Password" placeholder="Şifre" type="password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>

        <input asp-for="ConfirmPassword" placeholder="Şifreyi Onayla" type="password" class="form-control" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

        <input asp-for="PhoneNumber" placeholder="Telefon Numarası" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>

        <textarea asp-for="Address" placeholder="Adres" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Address" class="text-danger"></span>

        <button type="submit" class="submit-btn">Kayıt Ol</button>
    </form>

    <p class="bottom-text">Zaten bir hesabınız var mı? <a href="/Login/Index">Giriş Yap</a></p>
</div>

<style>
    body {
        background: linear-gradient(135deg, #667eea, #764ba2);
        font-family: 'Segoe UI', sans-serif;
    }

    .register-container {
        max-width: 450px;
        margin: 60px auto;
        padding: 40px;
        background: white;
        border-radius: 12px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
        text-align: center;
    }

    h2 {
        color: #4a47a3;
        margin-bottom: 30px;
    }

    .form-control {
        width: 100%;
        padding: 12px;
        margin-bottom: 15px;
        border-radius: 8px;
        border: 1px solid #ccc;
        font-size: 16px;
    }

    .submit-btn {
        background-color: #5c4db1;
        color: white;
        padding: 12px;
        width: 100%;
        border: none;
        border-radius: 8px;
        font-size: 18px;
        font-weight: bold;
        transition: 0.3s;
    }

        .submit-btn:hover {
            background-color: #4834d4;
        }

    .bottom-text {
        margin-top: 20px;
    }

    .alert-success-box {
        background-color: #d4edda;
        color: #155724;
        padding: 12px;
        border-radius: 8px;
        font-weight: bold;
        margin-bottom: 15px;
    }

    .text-danger {
        font-size: 14px;
        display: block;
        margin-bottom: 10px;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
