@model OKbkm.Models.Register

@{
    ViewData["Title"] = "Kayıt Ol";
}

<div class="register-container">
    <div class="register-card">
        <h2>OKbkm Bank</h2>
        <h3>Yeni Hesap Oluştur</h3>
        <form asp-action="Index" method="post" class="register-form">
            <div class="form-group">
                <label asp-for="TC">T.C. Kimlik No</label>
                <input asp-for="TC" class="form-control" required>
            </div>
            <div class="form-group">
                <label asp-for="NameUsername">Ad Soyad</label>
                <input asp-for="NameUsername" class="form-control" required>
            </div>
            <div class="form-group">
                <label asp-for="Mail">E-Posta</label>
                <input asp-for="Mail" type="email" class="form-control" required>
            </div>
            <div class="form-group">
                <label asp-for="Password">Şifre</label>
                <input asp-for="Password" type="password" class="form-control" required>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber">Telefon Numarası</label>
                <input asp-for="PhoneNumber" type="tel" class="form-control" required>
            </div>
            <div class="form-group">
                <label asp-for="Address">Adres</label>
                <textarea asp-for="Address" class="form-control" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Kayıt Ol</button>
        </form>
        <p class="login-link">Zaten bir hesabınız var mı? <a href="/Login/Index">Giriş Yap</a></p>
    </div>
</div>

<style>
    body {
        background: linear-gradient(135deg, #667eea, #764ba2);
        font-family: Arial, sans-serif;
    }

    .register-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .register-card {
        width: 400px;
        padding: 20px;
        background: white;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        text-align: center;
    }

        .register-card h2 {
            color: #d63384;
            font-size: 24px;
            margin-bottom: 10px;
        }

        .register-card h3 {
            font-size: 18px;
            color: #555;
        }

    .form-group {
        margin: 15px 0;
        text-align: left;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    .btn-primary {
        width: 100%;
        padding: 10px;
        background: #d63384;
        color: white;
        font-size: 16px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: 0.3s;
    }

        .btn-primary:hover {
            background: #b8266c;
        }

    .login-link {
        margin-top: 15px;
    }
</style>
