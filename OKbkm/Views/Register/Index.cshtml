@model OKbkm.Models.Register

@{
    ViewData["Title"] = "Kayıt Ol";
}

<div class="register-container">
    <div class="register-card">
        <h2>OKbkm Bank</h2>
        <h3>Yeni Hesap Oluştur</h3>
        <form asp-action="Index" asp-controller="Register" method="post">
            <label for="TC">T.C. Kimlik No</label>
            <input asp-for="TC" id="TC" name="TC" class="form-control" required>

            <label for="NameUsername">Ad Soyad</label>
            <input asp-for="NameUsername" id="NameUsername" name="NameUsername" class="form-control" required>

            <label for="Mail">E-Posta</label>
            <input asp-for="Mail" id="Mail" name="Mail" type="email" class="form-control" required>

            <label for="Password">Şifre</label>
            <input asp-for="Password" id="Password" name="Password" type="password" class="form-control" required>

            <label for="PhoneNumber">Telefon Numarası</label>
            <input asp-for="PhoneNumber" id="PhoneNumber" name="PhoneNumber" type="tel" class="form-control" required>

            <label for="Address">Adres</label>
            <textarea asp-for="Address" id="Address" name="Address" class="form-control" required></textarea>

            <button type="submit" class="btn btn-primary">Kayıt Ol</button>
        </form>
        <p class="login-link">Zaten bir hesabınız var mı? <a href="/Login/Index">Giriş Yap</a></p>
    </div>
</div>
