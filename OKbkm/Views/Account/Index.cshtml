@model List<OKbkm.Models.Account>

@{
    ViewData["Title"] = "Hesaplarım";
}

<div class="account-list-container">
    <h2>📋 Kayıtlı Hesaplarınız</h2>

    @if (Model.Count == 0)
    {
        <p>Henüz bir hesabınız bulunmamaktadır.</p>
    }
    else
    {
        <table class="account-table">
            <thead>
                <tr>
                    <th>TC Kimlik</th>
                    <th>Kart Tipi</th>
                    <th>Hesap No</th>
                    <th>Bakiye (₺)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var account in Model)
                {
                    <tr>
                        <td>@account.TC</td>
                        <td>@account.CardType</td>
                        <td>@account.AccountNo</td>
                        <td>@account.Balance.ToString("N2")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

<style>
    body {
        font-family: Arial, sans-serif;
        background: linear-gradient(135deg, #667eea, #764ba2);
        margin: 0;
        padding: 0;
    }

    .account-list-container {
        max-width: 800px;
        margin: 60px auto;
        background: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        text-align: center;
    }

    .account-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

        .account-table th,
        .account-table td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: center;
        }

        .account-table th {
            background-color: #f8f8f8;
        }
</style>
