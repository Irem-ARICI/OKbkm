@model OKbkm.Models.Login

@{
    ViewData["Title"] = "Giriş Yap";
    // Layout = "_Layout";
}

<div class="login-container">
    <div class="login-card">
        <h2>OKbkm Bank</h2>
        <h3>Hesabınıza Giriş Yapın</h3>
        @if (ViewBag.Error != null)
        {
            <div class="error-message">@ViewBag.Error</div>
        }
        <form asp-action="Index" method="post" class="login-form">
            <div class="form-group">
                <label asp-for="TC">T.C. Kimlik No</label>
                <input asp-for="TC" class="form-control" required>
            </div>
            <div class="form-group">
                <label asp-for="Password">Şifre</label>
                <input asp-for="Password" type="password" class="form-control" required>
            </div>
            <button type="submit" class="btn btn-primary">Giriş Yap</button>
        </form>
        <p class="register-link">Hesabınız yok mu? <a href="/Register/Index">Kayıt Olun</a></p>
    </div>
</div>

<style>
    body {
        background: linear-gradient(135deg, #667eea, #764ba2);
        font-family: Arial, sans-serif;
    }

    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .login-card {
        width: 350px;
        padding: 20px;
        background: white;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        text-align: center;
    }

        .login-card h2 {
            color: #4a47a3;
            font-size: 24px;
            margin-bottom: 10px;
        }

        .login-card h3 {
            font-size: 18px;
            color: #555;
        }

    .form-group {
        margin: 15px 0;
        text-align: left;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    .btn-primary {
        width: 100%;
        padding: 10px;
        background: #4a47a3;
        color: white;
        font-size: 16px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: 0.3s;
    }

        .btn-primary:hover {
            background: #3a36a3;
        }

    .register-link {
        margin-top: 15px;
    }

    .error-message {
        color: red;
        margin-bottom: 15px;
        text-align: center;
    }
</style>
